<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TradeU" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_100</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/white_100</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="MyButton.Login" parent="Widget.AppCompat.Button">
        <item name="textAllCaps">false</item>
        <item name="android:background">@drawable/btn_login_signup_bg</item>
        <item name="fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textColor">@color/black_100</item>
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="AuthEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColorHint">@color/grey_100</item>
        <item name="android:backgroundTint">@color/black_100</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:drawablePadding">18dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MyButton" parent="Widget.AppCompat.Button">
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/btn_bg</item>
    </style>
    <style name="MyButton.Login.SignUp">
        <item name="android:backgroundTint">@color/black_100</item>
        <item name="android:textColor">@color/white_100</item>
    </style>

    <style name="MyButton.ItemSizeOption">
        <item name="android:background">@drawable/btn_item_size_option_selector</item>
        <item name="fontFamily">@font/poppins_extra_bold</item>
    </style>

    <style name="MyTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black_100</item>
        <item name="android:textSize">17sp</item>
    </style>
    <style name="MyTextView.Regular">
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>
    <style name="MyTextView.Bold">
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
    </style>

    <style name="MyTextView.Medium">
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="MyTextView.Regular.TextViewInfoPayment">
        <item name="android:textSize">17sp</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="MyTextView.Medium.TextViewPayment">
        <item name="android:textSize">17sp</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="MyTextView.Bold.Profile">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <item name="iconifiedByDefault">false</item>
        <item name="searchIcon">@null</item>
        <item name="queryBackground">@android:color/transparent</item>
    </style>
    
    <style name="MyButton.Categories">
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/btn_categories_bg</item>
        <item name="android:textColor">@color/button_categories_text_color</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="MyButtonV2">
        <item name="android:background">@color/black_100</item>
        <item name="fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textColor">@color/grey</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">13sp</item>
    </style>
    <style name="MyButtonV2.Profile">
        <item name="android:background">@drawable/btn_profile_bg</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white_100</item>
    </style>

    <style name="MyButtonV2.rad10">
        <item name="android:background">@drawable/btn_v2_radius_10</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyButtonV2.rad15">
        <item name="android:background">@drawable/btn_back_home_bg</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyButtonV2.rad15.SaveTransaction">
        <item name="android:background">@drawable/btn_save_transaction_bg</item>
        <item name="android:textColor">@color/black_100</item>
    </style>

    <style name="MyTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/black_100</item>
        <item name="hintTextColor">@color/black_100</item>
        <item name="boxBackgroundColor">@color/grey_300</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeColor">@color/black_200</item>
    </style>

    <style name="MyTextInputEditText" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:textColor">@color/black_100</item>
        <item name="android:textSize">17sp</item>
        <item name="fontFamily">@font/poppins_semi_bold</item>
        <item name="android:paddingStart">18dp</item>
        <item name="android:paddingEnd">18dp</item>
        <item name="android:paddingTop">11dp</item>
        <item name="android:paddingBottom">11dp</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="TransactionEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/et_transaction_bg</item>
        <item name="android:textSize">19sp</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColorHint">@color/black_300</item>
    </style>
</resources>